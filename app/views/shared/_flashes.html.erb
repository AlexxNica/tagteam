<% unless flash.blank? %>
<section id="notices" class="row">
  <% unless flash[:notice].blank? %>
    <div class="alert alert-success alert-dismissable col-md-12" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span></button>
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% unless flash[:error].blank? %>
    <div class="alert alert-danger alert-dismissable col-md-12" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span></button>
      <%= flash[:error] %>
    </div>
  <% end %>
  <% unless flash[:alert].blank? %>
    <div class="alert alert-warning alert-dismissable col-md-12" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span></button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</section>
<% end %>

