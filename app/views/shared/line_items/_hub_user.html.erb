<tr>
  <td>
    <%= hub_user.email %>
  </td>
  <td>
    <% hub_user.roles.where(:authorizable_type => 'Hub', :authorizable_id => @hub.id).each do|r| %>
      <span class"role">
        <% if current_user && current_user.is?(:owner, @hub) && current_user != hub_user %>
          <%= link_to(raw('<span class="ui-silk inline ui-silk-cancel"></span>'), remove_role_hub_path(@hub, :user_id => hub_user.id, :role_name => r.name), :method => :delete, :confirm => 'Are you sure you want to remove this role for this user?') %> 
        <% end %>
        <%= Hub::DELEGATABLE_ROLES_HASH[r.name.to_sym][:name] %></span><br />
    <% end %>
  </td>
</tr>
