<tr class="hub_feed hover_row" id="hub_feed_<%= hub_feed.id %>">
  <td width="60%">
    <% if current_user && current_user.is?(:owner,hub_feed) %>
      <%= link_to('delete', hub_feed_path(hub_feed), :method => :delete, :confirm => "Are you sure?", :class => 'ui-silk ui-silk-delete inline hover gray', :title => "Delete this item") %>
      <%= link_to('edit', edit_hub_feed_path(hub_feed), :class => 'ui-silk ui-silk-application-edit inline hover gray', :title => "Edit this item") %>
    <% else %>
      &nbsp;
    <% end %>
    <span class="ui-silk inline ui-silk-feed"></span> <%= link_to(raw(strip_tags(hub_feed.to_s)), hub_feed_path(hub_feed)) %>
    <% if defined?(show_hubs) && show_hubs == true %>
      <span class="smaller">in <%= link_to(hub_feed.hub, hub_path(hub_feed.hub) )%></span>
    <% end %>
  </td>
  <td width="40%">
    <div class="more" id="hub_feed_more_<%= hub_feed.id %>"><span class="ui-silk inline ui-silk-asterisk-orange gray hover"></span> more</div> 
  </td>
</tr>
<tr class="metadata" id="hub_feed_metadata_<%= hub_feed.id %>">
  <td>
    <span class="updated"> <%= hub_feed.feed.updated_at.to_s(:long) %></span>
    <span class="items"><span class="ui-silk inline ui-silk-application-view-list"></span> <%= hub_feed.feed.feed_items.length %> items</span>
  </td>
  <td>
    <span class="feed_item_tags"><%= raw hub_feed.feed.feed_items.collect{|fi| fi.feed_item_tags}.flatten.uniq.collect{|t| link_to(t.tag, feed_item_tag_path(t), :class => 'tag')}[0,10].join(' ') %></span> 
  </td>
</tr>
