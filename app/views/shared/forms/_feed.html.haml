= semantic_form_for(@feed) do |f|
  = f.inputs do
    = f.input :feed_url, :hint => 'test feed'
    = f.input :title , :hint => 'automatically grabbed from a valid feed'
    = f.input :description ,:hint => 'like title, automatically grabbed from a valid feed'
  = f.actions do
    = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
