- content_for :top_panel do
  = render partial: (@hub_feed ? 'hub_feeds' : 'hubs') + '/top_panel'
- content_for :tabs do
  = render partial: (@hub_feed ? 'hub_feeds' : 'hubs') + '/tabs', locals: { active: 'tags' }
- content_for :tab_content do
  .nicely-padded
    %h2 Filter tags
    .form-group
      .row
        .col-xs-5
          .input-group
            %input#filter_by.form-control{:placeholder => "Keyword", :size => "15"}/
            %span.input-group-btn
              %a#filter_button.btn.btn-primary{:href => "#"} Filter
        .col-sm-1
          %a#reset_filter{:href => "#"} Reset
    %h2 Sort tags
    .row
      .col-sm-3
        %select#sort_tags_by.form-control
          %option{:value => "alpha"} Alphabetical
          %option{:selected => "selected", :value => "frequency"} Frequency
      .col-sm-3
        %select#sort_tags_direction.form-control
          %option{:value => "asc"} Ascending
          %option{:selected => "selected", :value => "desc"} Descending
    %ul#tag_cloud.list-unstyled{"data-hub-id" => "#{@hub.id}"}
      = render partial: 'tags/graph_item', as: :tag, collection: @tags,
        locals: { hub: @hub, hub_feed: @hub_feed, max_count: @tags.empty? ? 0 : @tags.first.count }
    :javascript
      $(document).ready(function(){$.observeTagCloudControls()});
