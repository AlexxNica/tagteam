<% content_for :top_panel do %>
  <%= render partial: 'hub_feeds/top_panel' %>
<% end %>

<% content_for :tabs do %>
  <%= render partial: 'hub_feeds/tabs', locals: { active: 'import' } %>
<% end %>

<% content_for :tab_content do %>
  <div class="nicely-padded" id="import">
    <h2>Import items from a file</h2>
    <%= form_tag(import_hub_feed_path(@hub_feed), :multipart => true, :method => :post) do %>
      <div class="row">
        <div class="form-group col-sm-6">
          <%= label_tag :type, 'Type' %>
          <%= select_tag(:type, options_for_select(
               [['Connotea RDF export',:connotea_rdf], ['Delicious','delicious']]),
               class: 'form-control') %>
        </div>
        <div class="form-group col-sm-6">
          <%= label_tag :import_file, 'File' %>
          <%= file_field_tag(:import_file, class: 'form-control') %>
        </div>
      </div>
      <%= submit_tag('Import items', :class => 'btn btn-primary') %>
    <% end %>
  </div>
<% end %>
