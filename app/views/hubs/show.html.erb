<% content_for :header do %>
<div class="col-sm-10">
  <h1>  
    <%= @hub.title %> 
    <span class="actions">
    <% if current_user && (current_user.is?(:owner, @hub) || current_user.is?(:superadmin)) %> 
      <%= link_to edit_hub_path(@hub), title: 'Edit this hub' do %>
        <%= fa_icon 'pencil' %>
      <% end %>
      <%= link_to hub_path(@hub), method: :delete, confirm: 'Are you sure you want to delete this hub?', title: 'Delete this hub' do %>
        <%= fa_icon 'remove' %>
      <% end %>
    <% end %>
    </span>
  </h1>
</div>
<div class="col-sm-2">
  <div class="export_menu row text-center">
      <div class="col-xs-4">
      <%= link_to items_hub_path(@hub, format: :rss), title: "An RSS feed of all items in this hub, with tag filters applied." do %>
        <%= image_tag image_path('protocol_rss.png') %>
        <p>RSS</p>
      <% end %>
      </div>
      <div class="col-xs-4">
      <%= link_to items_hub_path(@hub, format: :atom), title: "An Atom feed of all items in this hub, with tag filters applied." do %>
        <%= image_tag image_path('protocol_atom.png') %>
        <p>ATOM</p>
      <% end %>
      </div>
      <div class="col-xs-4">
      <%= link_to items_hub_path(@hub, format: :json, callback: 'callback'), title: "jsonp of all items in this hub, with tag filters applied." do %>
        <%= image_tag image_path('protocol_json.png') %>
        <p>JSON</p>
      <% end %>
      </div>
  </div>
</div>
<% end %>

<% content_for :tabs do %>
<li class="active">
  <a href="#about">About</a>
  <div class="nav-pill-arrow"></div>
</li>
<li>
<%= link_to('Items', items_hub_path(@hub))%>
  <div class="nav-pill-arrow"></div>
</li>
<li>
<%= link_to('Inputs', hub_hub_feeds_path(@hub))%>
  <div class="nav-pill-arrow"></div>
</li>
<li>
<%= link_to('Bookmarks', bookmark_collections_hub_path(@hub))%>
  <div class="nav-pill-arrow"></div>
</li>
<li class="last-of-section">
<%= link_to('Remixes', hub_republished_feeds_path(@hub))%>
  <div class="nav-pill-arrow"></div>
</li>
<li>
<%= link_to('Tags', hub_tags_path(@hub))%>
  <div class="nav-pill-arrow"></div>
</li>
<li class="last-of-section">
<%= link_to('Filters', hub_hub_tag_filters_path(@hub) )%>
  <div class="nav-pill-arrow"></div>
</li>
<li>
<%= link_to('History', retrievals_hub_path(@hub) )%>
  <div class="nav-pill-arrow"></div>
</li>
<% if current_user && current_user.is?(:owner, @hub) %> 
  <li>
  <%= link_to('Community', community_hub_path(@hub) )%>
  <div class="nav-pill-arrow"></div>
  </li>
<% end %>
<li class="last-of-section">
<%= link_to('Contact', contact_hub_path(@hub)) %>
  <div class="nav-pill-arrow"></div>
</li>
<li class="hub-search">
  <%= form_tag(item_search_hub_path(@hub), :method => :get) do %>
    <div class="input-group">
    <%= text_field_tag :q, params[:q], size: 14, placeholder: 'Search hub', class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag('Go', class: 'btn btn-default keyword_search_submit') %>
    </span>
    </div>
  <% end %>
</li>
<% end %>
