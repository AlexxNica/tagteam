<div class="hub detailed" id="hub_<%= @hub.id %>">
  <h1><%= @hub.title %><%= (@hub.owners.include?(current_user)) ? link_to('Delete', hub_path(@hub), :method => :delete, :confirm => 'Are you sure?') : '' %></h1>
  <div class="description">
    <%= @hub.description %>
  </div>
  <% unless @hub.tag_prefix.blank? %>
    <div class="tag_prefix">
      Prefix all tags emitted from the hub with "<%= @hub.tag_prefix %>"
    </div>
  <% end %>
  <div class="meta">
    <dl>
      <dt>Owners:</dt>
      <dd><%= @hub.owners.collect{|o| o.email}.join(', ') %></dd>
    </dl>
  </div>
</div>
