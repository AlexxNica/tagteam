<div class="tag_filter <%= type.to_s %>">
  <span class="filter-action"><%= type.to_s.capitalize %></span>
  <em><%= @tag.name %></em>
  <%= case type
      when :add then 'to'
      when :modify then 'for'
      when :delete then 'from'
      end %>:
<ul>
  <% if hub_filter_possible?(params, current_user) %>
  <li><%= link_to_tag_filter 'all items in this hub', @tag, type, { hub: @hub } %></li>
  <% end %>

  <% if feed_filter_possible?(params, current_user) %>
    <li><%= link_to_tag_filter 'all items in this feed', @tag, type, { feed: @hub_feed } %></li>
  <% end %>

  <% if item_filter_possible?(params, current_user) && type != :add %>
    <li><%= link_to_tag_filter 'just this item', @tag, type, { hub: @hub, item: @feed_item } %></li>
    <% end %>
  </ul>
</div>

