<% content_for :top_panel do %>
  <%= render partial: 'hubs/top_panel' %>
<% end %>

<% content_for :tabs do %>
  <%= render partial: 'hubs/tabs', locals: { active: 'settings' } %>
<% end %>

<% content_for :tab_content do %>
<div class="nicely-padded settings">
  <h1>Settings</h1>

  <div class="row">
    <div class="col-md-12">
      <%= form_tag(set_settings_hub_path(@hub)) do %>
        <ul class="list-unstyled">
          <li class="settings-element">
            <%= label_tag 'tags_delimiter', 'Tags delimiter' %>
            <div class="row">
              <div class="col-md-12">
                <%= text_field_tag('tags_delimiter', @settings[:tags_delimiter], {id: 'tags_delimiter'}) %>
              </div>
            </div>
          </li>
          <li class="settings-element">
            <%= label_tag 'bookmarklet_empty_description_reminder', 'Inform users about the empty description field in the bookmarklet form' %>
            <div class="row">
              <div class="col-md-12">
                <%= check_box_tag('bookmarklet_empty_description_reminder', @settings[:bookmarklet_empty_description_reminder], @settings[:bookmarklet_empty_description_reminder], { id: 'bookmarklet_empty_description_reminder' }) %>
              </div>
            </div>
          </li>
        </ul>

        <%= submit_tag 'Save', class: 'btn btn-primary', id: 'save_settings' %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
